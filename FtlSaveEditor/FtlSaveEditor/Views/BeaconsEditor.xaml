<UserControl x:Class="FtlSaveEditor.Views.BeaconsEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <StackPanel Margin="0,0,0,20">
        <!-- Header -->
        <TextBlock Text="Sector Map / Beacons" FontSize="22" FontWeight="Bold"
                   Foreground="{StaticResource AccentBlueBrush}" Margin="0,0,0,4"/>
        <TextBlock x:Name="BeaconCountText" FontSize="12"
                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,16"/>

        <!-- Beacon list -->
        <StackPanel x:Name="BeaconListPanel"/>
    </StackPanel>
</UserControl>
