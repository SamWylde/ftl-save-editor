<UserControl x:Class="FtlSaveEditor.Views.SystemsEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <StackPanel Margin="0,0,0,20">
        <!-- Header -->
        <TextBlock Text="Systems Editor" FontSize="22" FontWeight="Bold"
                   Foreground="{StaticResource AccentBlueBrush}" Margin="0,0,0,4"/>
        <TextBlock Text="Edit power allocation, damage, ionization, and hack status for all ship systems"
                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,16"/>

        <!-- Column headers -->
        <Border Background="{StaticResource BgLightBrush}" CornerRadius="4,4,0,0"
                Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="System" Grid.Column="0" FontWeight="SemiBold" FontSize="11"
                           Foreground="{StaticResource AccentBlueBrush}"/>
                <TextBlock Text="Capacity" Grid.Column="1" FontWeight="SemiBold" FontSize="11"
                           Foreground="{StaticResource AccentBlueBrush}"/>
                <TextBlock Text="Power" Grid.Column="2" FontWeight="SemiBold" FontSize="11"
                           Foreground="{StaticResource AccentBlueBrush}"/>
                <TextBlock Text="Damaged" Grid.Column="3" FontWeight="SemiBold" FontSize="11"
                           Foreground="{StaticResource AccentRedBrush}"/>
                <TextBlock Text="Ionized" Grid.Column="4" FontWeight="SemiBold" FontSize="11"
                           Foreground="{StaticResource AccentOrangeBrush}"/>
                <TextBlock Text="Hack Lvl" Grid.Column="5" FontWeight="SemiBold" FontSize="11"
                           Foreground="{StaticResource AccentOrangeBrush}"/>
                <TextBlock Text="Hacked" Grid.Column="6" FontWeight="SemiBold" FontSize="11"
                           Foreground="{StaticResource AccentRedBrush}"/>
            </Grid>
        </Border>

        <!-- System rows -->
        <StackPanel x:Name="SystemsListPanel"/>

        <!-- System sub-state sections (Clonebay, Battery, Shields, Cloaking) -->
        <StackPanel x:Name="SystemExtrasPanel" Margin="0,16,0,0"/>
    </StackPanel>
</UserControl>
