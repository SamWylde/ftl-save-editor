<UserControl x:Class="FtlSaveEditor.Views.GameDataBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <DockPanel>
        <!-- Header -->
        <StackPanel DockPanel.Dock="Top">
            <TextBlock Text="Game Data Browser" FontSize="22" FontWeight="Bold"
                       Foreground="{StaticResource AccentBlueBrush}" Margin="0,0,0,12"/>

            <!-- Source tabs -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <Button x:Name="VanillaTabBtn" Content="Vanilla (data.dat)"
                        Style="{StaticResource DarkButton}" Margin="0,0,6,0" Padding="10,5"/>
                <Button x:Name="ModsTabBtn" Content="Mod Blueprints"
                        Style="{StaticResource DarkButton}" Margin="0,0,6,0" Padding="10,5"/>
                <Button x:Name="RawFilesTabBtn" Content="Raw Files"
                        Style="{StaticResource DarkButton}" Margin="0,0,6,0" Padding="10,5"/>
            </StackPanel>

            <!-- Category sub-tabs -->
            <StackPanel x:Name="CategoryPanel" Orientation="Horizontal" Margin="0,0,0,8">
                <Button x:Name="WeaponsSubBtn" Content="Weapons"
                        Style="{StaticResource DarkButton}" Margin="0,0,4,0" Padding="8,4"/>
                <Button x:Name="DronesSubBtn" Content="Drones"
                        Style="{StaticResource DarkButton}" Margin="0,0,4,0" Padding="8,4"/>
                <Button x:Name="AugmentsSubBtn" Content="Augments"
                        Style="{StaticResource DarkButton}" Margin="0,0,4,0" Padding="8,4"/>
                <Button x:Name="CrewSubBtn" Content="Crew Races"
                        Style="{StaticResource DarkButton}" Margin="0,0,4,0" Padding="8,4"/>
            </StackPanel>

            <!-- Search -->
            <TextBox x:Name="SearchBox" Padding="8,6" Margin="0,0,0,8"/>

            <!-- Status -->
            <TextBlock x:Name="StatusLabel" FontSize="11"
                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
        </StackPanel>

        <!-- Content area -->
        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="6">
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="600">
                <StackPanel x:Name="ContentPanel" Margin="0"/>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
