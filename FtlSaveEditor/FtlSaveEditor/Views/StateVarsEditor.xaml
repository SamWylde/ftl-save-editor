<UserControl x:Class="FtlSaveEditor.Views.StateVarsEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <StackPanel Margin="0,0,0,20">
        <!-- Header -->
        <TextBlock Text="State Variables" FontSize="22" FontWeight="Bold"
                   Foreground="{StaticResource AccentBlueBrush}" Margin="0,0,0,4"/>
        <TextBlock Text="Key-value pairs that control game state. Critical for FTL: Multiverse quest progression and flags."
                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,16"/>

        <!-- Toolbar: Search + Add -->
        <Border Background="{StaticResource BgMediumBrush}" BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1" CornerRadius="6" Padding="12,8" Margin="0,0,0,12">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button x:Name="AddVarBtn" Content="+ Add Variable" Style="{StaticResource DarkButton}"
                            Margin="8,0,0,0"/>
                    <Button x:Name="DeleteSelectedBtn" Content="Delete Selected" Style="{StaticResource DarkButton}"
                            Margin="8,0,0,0" Foreground="{StaticResource AccentRedBrush}"/>
                </StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Filter:" Grid.Column="0" VerticalAlignment="Center"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,8,0"/>
                    <TextBox x:Name="FilterBox" Grid.Column="1" MinWidth="200"/>
                </Grid>
            </DockPanel>
        </Border>

        <!-- Count label -->
        <TextBlock x:Name="CountText" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"
                   Margin="0,0,0,8"/>

        <!-- Column headers -->
        <Border Background="{StaticResource BgLightBrush}" CornerRadius="4,4,0,0"
                Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="" Grid.Column="0" FontSize="11"/>
                <TextBlock Text="Key" Grid.Column="1" FontWeight="SemiBold" FontSize="11"
                           Foreground="{StaticResource AccentBlueBrush}"/>
                <TextBlock Text="Value" Grid.Column="2" FontWeight="SemiBold" FontSize="11"
                           Foreground="{StaticResource AccentGreenBrush}"/>
            </Grid>
        </Border>

        <!-- Variable rows -->
        <StackPanel x:Name="VarListPanel"/>

        <!-- Empty state -->
        <TextBlock x:Name="EmptyText" Text="No state variables found"
                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"
                   Margin="12,16,0,0" Visibility="Collapsed"/>
    </StackPanel>
</UserControl>
