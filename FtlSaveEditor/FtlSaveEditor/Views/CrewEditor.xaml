<UserControl x:Class="FtlSaveEditor.Views.CrewEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <StackPanel Margin="0,0,0,20">
        <!-- Header -->
        <DockPanel Margin="0,0,0,16">
            <TextBlock Text="Crew Editor" FontSize="22" FontWeight="Bold"
                       Foreground="{StaticResource AccentBlueBrush}" VerticalAlignment="Center"/>
            <TextBlock x:Name="CrewCountText" FontSize="13"
                       Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"
                       Margin="12,0,0,0"/>
        </DockPanel>

        <!-- Partial mode info banner -->
        <Border x:Name="PartialModeBanner" Visibility="Collapsed"
                Background="#1A3B82F6" BorderBrush="#3B82F6" BorderThickness="1"
                CornerRadius="6" Padding="12,8" Margin="0,0,0,12">
            <TextBlock x:Name="PartialModeBannerText" TextWrapping="Wrap"
                       Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
        </Border>

        <!-- Crew list -->
        <StackPanel x:Name="CrewListPanel"/>
    </StackPanel>
</UserControl>
