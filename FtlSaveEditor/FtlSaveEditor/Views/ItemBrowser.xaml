<UserControl x:Class="FtlSaveEditor.Views.ItemBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <DockPanel>
        <!-- Header + Controls -->
        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,12">
            <TextBlock Text="Item Browser" FontSize="22" FontWeight="Bold"
                       Foreground="{StaticResource AccentBlueBrush}" Margin="0,0,0,12"/>

            <!-- Category tabs -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <Button x:Name="WeaponsTabBtn" Content="Weapons" Style="{StaticResource DarkButton}"
                        Margin="0,0,6,0" Padding="16,6"/>
                <Button x:Name="DronesTabBtn" Content="Drones" Style="{StaticResource DarkButton}"
                        Margin="0,0,6,0" Padding="16,6"/>
                <Button x:Name="AugmentsTabBtn" Content="Augments" Style="{StaticResource DarkButton}"
                        Margin="0,0,6,0" Padding="16,6"/>
            </StackPanel>

            <!-- Search -->
            <TextBox x:Name="SearchBox" Padding="8,6"
                     Tag="Search by ID or name..."/>

            <!-- Column headers -->
            <Border Background="{StaticResource BgLightBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1,1,1,0" Padding="12,6" Margin="0,8,0,0">
                <Grid x:Name="HeaderGrid"/>
            </Border>
        </StackPanel>

        <!-- Status bar -->
        <TextBlock x:Name="StatusText" DockPanel.Dock="Bottom"
                   Foreground="{StaticResource TextSecondaryBrush}"
                   FontSize="11" Margin="0,6,0,0"/>

        <!-- Scrollable item list -->
        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1,0,1,1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ItemListPanel"/>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
