<UserControl x:Class="FtlSaveEditor.Views.TrainerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <StackPanel Margin="0,0,0,20">
        <TextBlock Text="Trainer" FontSize="22" FontWeight="Bold"
                   Foreground="{StaticResource AccentBlueBrush}" Margin="0,0,0,16"/>

        <!-- Connection indicator -->
        <Border x:Name="NotAttachedBanner"
                Background="{StaticResource BgMediumBrush}"
                BorderBrush="{StaticResource AccentOrangeBrush}"
                BorderThickness="1" CornerRadius="6" Padding="12,10" Margin="0,0,0,12">
            <TextBlock TextWrapping="Wrap" Foreground="{StaticResource AccentOrangeBrush}" FontSize="12"
                       Text="Not attached to FTL. Go to the Connect page to attach first."/>
        </Border>

        <!-- Warning when attached -->
        <Border x:Name="AttachedBanner"
                Background="{StaticResource BgMediumBrush}"
                BorderBrush="{StaticResource AccentGreenBrush}"
                BorderThickness="1" CornerRadius="6" Padding="12,10" Margin="0,0,0,12"
                Visibility="Collapsed">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="8" Height="8" Fill="{StaticResource AccentGreenBrush}"
                             VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock x:Name="AttachedStatusText" TextWrapping="Wrap"
                               Foreground="{StaticResource AccentGreenBrush}" FontSize="12"
                               Text="Attached — values update in real-time"/>
                </StackPanel>
                <TextBlock x:Name="ResolveMethodLabel"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="11" Margin="18,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Cheat Toggles -->
        <Border Background="{StaticResource BgMediumBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1" CornerRadius="6" Padding="16" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="CHEAT TOGGLES" FontSize="11" FontWeight="Bold"
                           Foreground="{StaticResource AccentOrangeBrush}" Margin="0,0,0,12"/>
                <TextBlock Text="Toggle cheats on/off. Values are frozen while active."
                           Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" Margin="0,0,0,10"/>

                <UniformGrid Columns="2" Margin="0,0,0,0">
                    <CheckBox x:Name="GodModeToggle" Margin="0,0,0,8">
                        <TextBlock Text="God Mode (freeze hull)" FontSize="12"/>
                    </CheckBox>
                    <CheckBox x:Name="UnlimitedScrapToggle" Margin="0,0,0,8">
                        <TextBlock Text="Unlimited Scrap (999)" FontSize="12"/>
                    </CheckBox>
                    <CheckBox x:Name="UnlimitedFuelToggle" Margin="0,0,0,8">
                        <TextBlock Text="Unlimited Fuel (999)" FontSize="12"/>
                    </CheckBox>
                    <CheckBox x:Name="UnlimitedMissilesToggle" Margin="0,0,0,8">
                        <TextBlock Text="Unlimited Missiles (999)" FontSize="12"/>
                    </CheckBox>
                    <CheckBox x:Name="UnlimitedDronePartsToggle" Margin="0,0,0,8">
                        <TextBlock Text="Unlimited Drone Parts (999)" FontSize="12"/>
                    </CheckBox>
                </UniformGrid>
            </StackPanel>
        </Border>

        <!-- Resources Table -->
        <Border Background="{StaticResource BgMediumBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1" CornerRadius="6" Padding="16" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="RESOURCES" FontSize="11" FontWeight="Bold"
                           Foreground="{StaticResource AccentGreenBrush}" Margin="0,0,0,12"/>

                <!-- Column headers -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Resource" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="1" Text="Current" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="2" Text="New Value" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="3" Text="Write" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="4" Text="Freeze" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </Grid>

                <StackPanel x:Name="ValuesPanel"/>
            </StackPanel>
        </Border>

        <!-- Quick Actions -->
        <Border Background="{StaticResource BgMediumBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1" CornerRadius="6" Padding="16" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="QUICK ACTIONS" FontSize="11" FontWeight="Bold"
                           Foreground="{StaticResource AccentOrangeBrush}" Margin="0,0,0,12"/>
                <WrapPanel>
                    <Button x:Name="MaxAllBtn" Content="Max All Resources"
                            Style="{StaticResource DarkButton}" Margin="0,0,8,8"/>
                    <Button x:Name="UnfreezeAllBtn" Content="Unfreeze All"
                            Style="{StaticResource DarkButton}" Margin="0,0,8,8"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- Custom Values -->
        <Border Background="{StaticResource BgMediumBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1" CornerRadius="6" Padding="16" Margin="0,0,0,12">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="CUSTOM VALUES" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource AccentBlueBrush}" VerticalAlignment="Center"/>
                    <TextBlock Text="  —  found via scanner or entered manually"
                               FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Column headers for custom values -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Name" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="1" Text="Current" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="2" Text="New Value" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="3" Text="Write" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="4" Text="Freeze" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </Grid>

                <StackPanel x:Name="CustomValuesPanel"/>

                <!-- Add custom value row -->
                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="CustomNameInput" Grid.Column="0"
                             Width="100" HorizontalAlignment="Left"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="0x" VerticalAlignment="Center"
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,2,0"/>
                        <TextBox x:Name="CustomAddressInput" Width="130"/>
                    </StackPanel>
                    <Button x:Name="AddCustomValueBtn" Grid.Column="2" Content="+ Add"
                            Style="{StaticResource DarkButton}" Padding="8,3" Margin="8,0,0,0"/>
                </Grid>
                <TextBlock Text="Enter a name and hex address to add a custom trained value."
                           Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Memory Scanner -->
        <Border Background="{StaticResource BgMediumBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1" CornerRadius="6" Padding="16">
            <Expander IsExpanded="False" Foreground="{StaticResource TextPrimaryBrush}">
                <Expander.Header>
                    <TextBlock Text="MEMORY SCANNER — find any game value" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource AccentBlueBrush}"/>
                </Expander.Header>
                <StackPanel Margin="0,12,0,0">
                    <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"
                               Margin="0,0,0,10"
                               Text="Find any value in FTL's memory. Enter the value you see in-game, click First Scan, change the value in-game, enter the new value, click Next Scan. Repeat until only a few candidates remain."/>

                    <!-- Scan controls -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Value:" VerticalAlignment="Center"
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,8,0"/>
                        <TextBox x:Name="ScanValueInput" Width="100" Margin="0,0,8,0"/>
                        <Button x:Name="FirstScanBtn" Content="First Scan"
                                Style="{StaticResource DarkButton}" Padding="10,4" Margin="0,0,6,0"/>
                        <Button x:Name="NextScanBtn" Content="Next Scan"
                                Style="{StaticResource DarkButton}" Padding="10,4" Margin="0,0,6,0"
                                IsEnabled="False"/>
                        <Button x:Name="ClearScanBtn" Content="Clear"
                                Style="{StaticResource DarkButton}" Padding="10,4"/>
                    </StackPanel>

                    <!-- Status -->
                    <TextBlock x:Name="ScanStatusLabel" Text=""
                               Foreground="{StaticResource AccentGreenBrush}" FontSize="12"
                               Margin="0,0,0,8"/>

                    <!-- Results -->
                    <Border x:Name="ScanResultsBorder" Visibility="Collapsed"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                            CornerRadius="4" Padding="0" MaxHeight="250">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="ScanResultsPanel"/>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </Expander>
        </Border>
    </StackPanel>
</UserControl>
