<UserControl x:Class="FtlSaveEditor.Views.TrainerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <StackPanel Margin="0,0,0,20">
        <TextBlock Text="Live Resources" FontSize="22" FontWeight="Bold"
                   Foreground="{StaticResource AccentBlueBrush}" Margin="0,0,0,16"/>

        <!-- Connection indicator -->
        <Border x:Name="NotAttachedBanner"
                Background="{StaticResource BgMediumBrush}"
                BorderBrush="{StaticResource AccentOrangeBrush}"
                BorderThickness="1" CornerRadius="6" Padding="12,10" Margin="0,0,0,12">
            <TextBlock TextWrapping="Wrap" Foreground="{StaticResource AccentOrangeBrush}" FontSize="12"
                       Text="Not attached to FTL. Go to the Connect page to attach first."/>
        </Border>

        <!-- Warning when attached -->
        <Border x:Name="AttachedBanner"
                Background="{StaticResource BgMediumBrush}"
                BorderBrush="{StaticResource AccentGreenBrush}"
                BorderThickness="1" CornerRadius="6" Padding="12,10" Margin="0,0,0,12"
                Visibility="Collapsed">
            <StackPanel Orientation="Horizontal">
                <Ellipse Width="8" Height="8" Fill="{StaticResource AccentGreenBrush}"
                         VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock x:Name="AttachedStatusText" TextWrapping="Wrap"
                           Foreground="{StaticResource AccentGreenBrush}" FontSize="12"
                           Text="Attached â€” values update in real-time"/>
            </StackPanel>
        </Border>

        <!-- Resources Table -->
        <Border Background="{StaticResource BgMediumBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1" CornerRadius="6" Padding="16" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="RESOURCES" FontSize="11" FontWeight="Bold"
                           Foreground="{StaticResource AccentGreenBrush}" Margin="0,0,0,12"/>

                <!-- Column headers -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Resource" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="1" Text="Current" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="2" Text="New Value" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="3" Text="Write" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="4" Text="Freeze" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </Grid>

                <StackPanel x:Name="ValuesPanel"/>
            </StackPanel>
        </Border>

        <!-- Quick Actions -->
        <Border Background="{StaticResource BgMediumBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1" CornerRadius="6" Padding="16" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="QUICK ACTIONS" FontSize="11" FontWeight="Bold"
                           Foreground="{StaticResource AccentOrangeBrush}" Margin="0,0,0,12"/>
                <WrapPanel>
                    <Button x:Name="MaxAllBtn" Content="Max All Resources"
                            Style="{StaticResource DarkButton}" Margin="0,0,8,8"/>
                    <Button x:Name="UnfreezeAllBtn" Content="Unfreeze All"
                            Style="{StaticResource DarkButton}" Margin="0,0,8,8"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- Manual Address Override -->
        <Border Background="{StaticResource BgMediumBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1" CornerRadius="6" Padding="16">
            <Expander IsExpanded="False" Foreground="{StaticResource TextPrimaryBrush}">
                <Expander.Header>
                    <TextBlock Text="Advanced: Manual Address Override" FontSize="11" FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </Expander.Header>
                <StackPanel Margin="0,8,0,0">
                    <TextBlock Text="If auto-detection fails, enter hex addresses from Cheat Engine below."
                               Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"
                               TextWrapping="Wrap" Margin="0,0,0,8"/>
                    <StackPanel x:Name="ManualAddressPanel"/>
                </StackPanel>
            </Expander>
        </Border>
    </StackPanel>
</UserControl>
