<UserControl x:Class="FtlSaveEditor.Views.DronesEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <StackPanel Margin="0,0,0,20">
        <!-- Header -->
        <DockPanel Margin="0,0,0,16">
            <TextBlock Text="Drones Editor" FontSize="22" FontWeight="Bold"
                       Foreground="{StaticResource AccentBlueBrush}" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="AddDroneBtn" Content="+ Add Drone" Style="{StaticResource DarkButton}"/>
            </StackPanel>
        </DockPanel>

        <!-- Column headers -->
        <Border Background="{StaticResource BgLightBrush}" CornerRadius="4,4,0,0"
                Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="#" Grid.Column="0" FontWeight="SemiBold" FontSize="11"
                           Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock Text="Drone ID" Grid.Column="1" FontWeight="SemiBold" FontSize="11"
                           Foreground="{StaticResource AccentBlueBrush}"/>
                <TextBlock Text="Armed" Grid.Column="2" FontWeight="SemiBold" FontSize="11"
                           Foreground="{StaticResource AccentGreenBrush}"/>
                <TextBlock Text="Player Ctrl" Grid.Column="3" FontWeight="SemiBold" FontSize="11"
                           Foreground="{StaticResource AccentGreenBrush}"/>
                <TextBlock Text="Body X" Grid.Column="4" FontWeight="SemiBold" FontSize="11"
                           Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock Text="Body Y" Grid.Column="5" FontWeight="SemiBold" FontSize="11"
                           Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock Text="Room" Grid.Column="6" FontWeight="SemiBold" FontSize="11"
                           Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock Text="Health" Grid.Column="7" FontWeight="SemiBold" FontSize="11"
                           Foreground="{StaticResource AccentOrangeBrush}"/>
                <TextBlock Text="Room Sq" Grid.Column="8" FontWeight="SemiBold" FontSize="11"
                           Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock Text="Del" Grid.Column="9" FontWeight="SemiBold" FontSize="11"
                           Foreground="{StaticResource AccentRedBrush}" TextAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Drone rows -->
        <StackPanel x:Name="DroneListPanel"/>

        <!-- Empty state -->
        <TextBlock x:Name="EmptyText" Text="No drones installed"
                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"
                   Margin="12,16,0,0" Visibility="Collapsed"/>
    </StackPanel>
</UserControl>
